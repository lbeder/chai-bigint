{
  "extends": ["standard", "prettier"],
  "env": {
    "mocha": true
  },
  "rules": {
    "camelcase": [
      "error",
      {
        "ignoreImports": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "semi": ["error", "always"],
    "no-plusplus": "off",
    "no-await-in-loop": "off",
    "no-restricted-syntax": "off",
    "no-continue": "off",
    "arrow-body-style": "off",
    "no-loop-func": "off",
    "no-unused-expressions": "off",
    "require-await": "error",
    "no-return-await": "error"
  },
  "globals": {
    "assert": true,
    "expect": true,
    "artifacts": true,
    "contract": true,
    "web3": true
  }
}
